<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="PuzzleListItemTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Semilight" />
        <Setter Property="Foreground" Value="#1C1C1C"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="PuzzleListItemDescription" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Light"/>
        <Setter Property="Foreground" Value="#7F7F7F"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="PuzzleListItemDifficulty" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
        <Setter Property="Foreground" Value="#7F7F7F"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="PuzzleListItemTime" TargetType="RichTextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
        <Setter Property="Foreground" Value="#1C1C1C"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>

    <Style x:Key="AppBarStyle" TargetType="Border">
        <Setter Property="Background" Value="#F2F2F2"/>
    </Style>

    <Style x:Key="AppBarCheckbox" TargetType="CheckBox">
        <!--<Setter Property="Background" Value="#1C1C1C"/>-->
        <Setter Property="Foreground" Value="#1C1C1C"/>
        <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="PuzzleTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Light"/>
        <Setter Property="Foreground" Value="#1C1C1C"/>
        <Setter Property="FontSize" Value="26"/>
    </Style>

    <Style x:Key="EmptyCommandStyle" TargetType="Border">
        <!--TODO: implement properly-->
        <Setter Property="Background" Value="#E5E5E5"/>
    </Style>

    <Style x:Key="FunctionTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="#1c1c1c"/>
        <Setter Property="FontSize" Value="26"/>
    </Style>

    <Style x:Key="SolvedLengthBoxStyle" TargetType="Border">
        <Setter Property="Background" Value="#7F7F7F"/>
    </Style>

    <Style x:Key="SolvedLengthTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <SolidColorBrush x:Key="ContentBackground" Color="White" />
    <SolidColorBrush x:Key="ContentForeground" Color="Black" />

    <SolidColorBrush x:Key="ListViewItemPointerOverBackgroundThemeBrush" Color="#F2F2F2"/>
    <SolidColorBrush x:Key="ListViewItemSelectedBackgroundThemeBrush" Color="Gold"/>
    <SolidColorBrush x:Key="ListViewItemSelectedPointerOverBackgroundThemeBrush" Color="Gold"/>
    <SolidColorBrush x:Key="ListViewItemPlaceholderBackgroundThemeBrush" Color="#E5E5E5"/>

    <SolidColorBrush x:Key="EasyForeground" Color="Green"/>
    <SolidColorBrush x:Key="MediumForeground" Color="#C0C600"/>
    <SolidColorBrush x:Key="HardForeground" Color="Orange"/>
    <SolidColorBrush x:Key="InsaneForeground" Color="Red"/>

    <ImageBrush x:Key="PuzzleItemThumbnailBackground" ImageSource="../Assets/PuzzleItemBackground.png"/>
</ResourceDictionary>
